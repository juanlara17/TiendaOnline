{% extends 'layout.twig' %}

{% block content %}
    <h1>Detalle de Producto</h1>

    <div class="product-block">
        <img src="{{ product.image }}" width="300" alt="">
    </div>

    <div class="product-block">
        <h3>{{ product.name }}</h3>
        <hr>
        <div class="product-info">
            <p>{{ product.description }}</p>
            <p>Precio: ${{ product.price|number_format(2) }}</p>
            <p>
                <a href="#">La quiero</a>
            </p>
        </div>
    </div>

    <p><a href="{{ route('home') }}">Regresar</a></p>

{% endblock %}
